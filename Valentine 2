    <script>
        function countDays() {
            const startDate = new Date("2020-02-14");
            const today = new Date();
            const diffTime = Math.abs(today - startDate);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            document.getElementById("count").innerText = diffDays;
        }
        countDays();
    </script>
